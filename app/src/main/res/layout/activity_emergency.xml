<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".emergency">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_phone_number"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:autoLink="phone"
            android:gravity="center"
            android:minWidth="32dp"
            android:minHeight="48dp"
            android:onClick="onPhoneNumberClicked"
            android:text="EMERGENCY HOTLINE"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            android:gravity="center"
            android:src="@drawable/br"
            android:onClick="onCallButtonClicked"
            android:text="PHILIPPINE NATIONAL RED CROSS" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/teal_700"
            android:gravity="center"
            android:onClick="onCallButtonClicked"
            android:text="BUREAU OF FIRE PROTECTION" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/teal_700"
            android:gravity="center"
            android:onClick="onCallButtonClicked"
            android:text="PHILIPPINE NATIONAL POLICE" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/teal_700"
            android:gravity="center"
            android:onClick="onCallButtonClicked"
            android:text="DEPARTMENT OF HEALTH" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/teal_700"
            android:gravity="center"
            android:onClick="onCallButtonClicked"
            android:text="DEPARTMENT OF SOCIAL WALEFARE" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/teal_700"
            android:gravity="center"
            android:onClick="onCallButtonClicked"
            android:text="NATIONAL DISASTER RISK REDUCTION" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/teal_700"
            android:gravity="center"
            android:onClick="onCallButtonClicked"
            android:text="PAGASA" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/teal_700"
            android:gravity="center"
            android:onClick="onCallButtonClicked"
            android:text="PHILVOLCS" />


        <Button
            android:id="@+id/button_9"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/teal_700"
            android:gravity="center"
            android:onClick="onCallButtonClicked"
            android:text="PHILIPPINE COAST GUARD" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="40dp"
            android:background="@color/lavender"
            android:gravity="center"
            android:text="&quot;When you click the button, \n it directs you to dial&quot;"
            android:textColor="#EFE6E6"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button0"
            android:layout_width="342dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/Yellow"
            android:text="click to see the Nearby Hospital" />

    </LinearLayout>


</RelativeLayout>


